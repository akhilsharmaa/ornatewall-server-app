<div 
  class="relative w-full h-screen bg-cover bg-center flex items-center justify-center px-8 md:px-24"
  style="background-image: url('https://images.unsplash.com/photo-1616046229478-9901c5536a45?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8aG91c2UlMjBpbnRlcmlvcnxlbnwwfHwwfHx8MA%3D%3D');"
>
  <div class="absolute inset-0 bg-black opacity-60"></div>
  <div class="relative z-10 max-w-lg text-white">
    <h1 class="text-4xl m-10 md:text-6xl font-semibold leading-tight">
        Luxurious Living Spaces
    </h1>
      
        <div class="bg-white bg-opacity-95 rounded-lg shadow-xl p-8 w-full text-gray-900">
            <h2 class="text-2xl font-semibold mb-6 text-center">Talk to a designer</h2>
            <form action="/submit-contact-form" method="POST" class="space-y-4">
                <input
                    type="text"
                    name="name"
                    placeholder="Name"
                    class="w-full border dark:bg-white border-gray-300 rounded-md px-4 py-2 text-sm focus:outline-none focus:border-gray-500"
                    required
                />
                <input
                    type="email"
                    name="email"
                    placeholder="Email ID"
                    class="w-full border dark:bg-white border-gray-300 rounded-md px-4 py-2 text-sm focus:outline-none focus:border-gray-500"
                    required
                />
                <input
                    type="tel"
                    name="phone"
                    placeholder="Phone number"
                    class="w-full border dark:bg-white border-gray-300 rounded-md px-4 py-2 text-sm focus:outline-none focus:border-gray-500"
                />
                <div class="flex items-center space-x-2">
                    <input type="checkbox" id="whatsapp" name="whatsapp" class="h-4 w-4 text-black">
                    <label for="whatsapp" class="text-sm text-gray-700">Send me updates on WhatsApp</label>
                </div>
                <textarea
                    name="message"
                    placeholder="Any note or message*"
                    class="w-full border dark:bg-white border-gray-300 rounded-md px-4 py-2 h-24 text-sm focus:outline-none focus:border-gray-500"
                    required
                ></textarea>
                <button
                    type="submit"
                    class="w-full bg-warning text-white font-semibold py-2 rounded-md hover:bg-gray-800 transition duration-300"
                >
                    GET FREE QUOTE
                </button>
                <p class="text-xs text-gray-500 text-center mt-4">
                    By submitting this form, you agree to the privacy policy & terms and conditions.
                </p>
            </form>
        </div>


  </div>
</div>
