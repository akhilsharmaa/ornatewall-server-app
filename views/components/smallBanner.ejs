<!-- SmallBanner.ejs -->
<div id="smallBanner" class="hidden">
    <div class="w-full bg-gradient-to-r from-orange-400 via-red-500 to-orange-500 text-white py-2 px-6 text-sm font-semibold flex flex-col shadow-lg mx-1">
        <div class="flex justify-between items-center">
            <span class="flex-1 text-lg">
                Hello! Now We are at a new location.
                <span class="mt-2 text-blue-300 hover:text-blue-500 focus:outline-none transition-all duration-300 ease-in-out cursor-pointer" onclick="toggleExpanded()">view more</span>
            </span>
            <span class="ml-4 text-xl text-white hover:text-red-400 focus:outline-none transform transition-all duration-300 ease-in-out hover:scale-110 cursor-pointer" onclick="hideBanner()">
                âœ–
            </span>
        </div>
        <div id="expandedText" class="hidden mt-2 text-sm">
            NKDA COMMUNITY MARKET SHOP NO 33 ACTION AREA 1, 
            <br> 
            AA KOLKATA, A BLOCK, Kolkata, West Bengal 700156
        </div>
    </div>
</div>

<script>
    setTimeout(() => {
        document.getElementById('smallBanner').classList.remove('hidden');
    }, 3000);

    function hideBanner() {
        document.getElementById('smallBanner').classList.add('hidden');
    }

    function toggleExpanded() {
        const expandedText = document.getElementById('expandedText');
        expandedText.classList.toggle('hidden');
        document.querySelector('#smallBanner .text-blue-300').textContent = expandedText.classList.contains('hidden') ? 'view more' : 'view less';
    }
</script>
