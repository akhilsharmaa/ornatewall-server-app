<section class="flex flex-col m-20 items-center bg-gray-50 py-12 px-4 lg:px-24">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 w-full md:w-auto mb-8">
        <% [
            { icon: '/assets/home/image4_1.png', title: 'Flat 10 year warranty', description: 'Choose interiors designed with superior quality material, leaving no room for defects.' },
            { icon: '/assets/home/image4_2.png', title: '44-day delivery', description: 'Choose interiors designed with superior quality material, leaving no room for defects.' },
            { icon: '/assets/home/image4_3.png', title: '400+ design experts', description: 'Choose interiors designed with superior quality material, leaving no room for defects.' },
            { icon: '/assets/home/image4_4.png', title: 'Post-installation', description: 'Choose interiors designed with superior quality material, leaving no room for defects.' }
        ].forEach(function(feature) { %>
            <%- include('FeatureCard', { icon: feature.icon, title: feature.title, description: feature.description }) %>
        <% }); %>
