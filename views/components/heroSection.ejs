<div class="relative h-screen overflow-hidden">
    <!-- Video Background -->
    <video autoplay loop muted class="absolute inset-0 w-full h-full object-cover">
        <source src="/assets/home/video4.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <!-- Overlay -->
    <div class="absolute inset-0 bg-gray-900 opacity-30"></div>

    <!-- Content -->
    <div class="relative z-10 flex flex-col items-center justify-center h-full text-center text-white px-4">
        <div class='flex flex-col items-center justify-center'>
            <h1 class="text-4xl sm:text-5xl lg:text-8xl font-bold mb-6 sm:mb-8 leading-tight">
                Elevate Your <span class="text-red-400">Space</span>.
            </h1>

            <p class="text-base md:text-lg lg:text-xl max-w-2xl mb-10 md:mb-12 leading-relaxed px-2 md:px-4">
                Transforming Spaces into Timeless Experiences Through Innovative Design Solutions.
            </p>

            <div class='lg:w-2/3 w-full'>
                <!-- Including another EJS partial for the contact form -->
                <%- include('ContactFormHero') %>
            </div>
        </div>

        <div class='w-1/3'>
        </div>
    </div>

    <!-- Bottom Gradient -->
    <div class="absolute inset-x-0 bottom-0 h-1/4 bg-gradient-to-t from-gray-900 to-transparent pointer-events-none"></div>
</div>